@page
@model VINES.Pages.CommunityPosts.IndexModel
@{
    ViewData["Title"] = "Community Post";
}

<div class="text-center">
    <h1 class="display-4">Community Posts</h1>
    <form method="post">
        <div class="form-group">
            ID <input type="number" name="communityPostID" placeholder="enter id" />
            Title <input type="text" name="communityPostTitle" placeholder="Enter Title" />
            Category <input type="number" name="communityPostcategory" placeholder="Enter Nunber" />
            Content <input type="text" name="communityPostContent" placeholder="Enter Updates" />
            Date Added <input type="date" name="dateAdded" placeholder="enter date" />
            Last Modified <input type="date" name="lastModified" placeholder="enter date" />
            <input type="submit" value="Add Community Post" class="btn btn-primary" />
        </div>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Category</th>
            <th>Content</th>
            <th>Date Added</th>
            <th>Last Modified</th>
        </tr>
        @foreach(var item in Model.getRecords)
        {
            <tr>
                <td>@item.communityPostID</td>
                <td>@item.communityPostTitle</td>
                <td>@item.communityPostCategory</td>
                <td>@item.communityPostContent</td>
                <td>@item.dateAdded</td>
                <td>@item.lastModified</td>
            </tr>
        }
    </table>
    </form>
</div>
