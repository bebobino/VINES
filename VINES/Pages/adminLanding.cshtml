@page
@model VINES.Pages.adminLandingModel
@using CommunityPosts
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "adminLanding";
}

@if ((await AuthorizationService.AuthorizeAsync(User, "AdminOnly")).Succeeded)
{

    <!-- ======= Blog Page ======= -->
    <div class="blog-page area-padding">
        <div class="container">
            <div class="row">

                <h1 style="font-size: x-large;"><b>Dashboard</b></h1>

                <section id="counts" class="counts section-bg">
                    <div class="container">

                        <div class="row justify-content-end">

                            <div class="card col-lg-3 col-md-5 col-6 d-md-flex align-items-center text-center" id="showSources">
                                <br>
                                <h1>@Model.sources.Count</h1>
                                <h5>News Sources</h5>

                            </div>

                            <div class="card col-lg-3 col-md-5 col-6 d-md-flex align-items-center text-center" id="showInstitutions">
                                <br>
                                <h1>@Model.institutions.Count</h1>
                                <h5>Institutions in database</h5>

                            </div>

                            <div class="card col-lg-3 col-md-5 col-6 d-md-flex align-items-center text-center" id="showVaccines">
                                <br>
                                <h1>@Model.vaccines.Count</h1>
                                <h5>Vaccines in database</h5>

                            </div>

                            <div class="card col-lg-3 col-md-5 col-6 d-md-flex align-items-center text-center">
                                <br>
                                <h1>87</h1>
                                <h5>Recommendations Given</h5>


                            </div>
                        </div>
                    </div>
                </section>

                <h1 style="font-size: x-large;"><b>Diseases</b></h1>
                <div class="row">
                    <!-- End single blog -->
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="single-blog">
                            <div class="blog-text">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Name</th>
                                            <th>Notes</th>
                                            <th>Date Added</th>
                                            <th>Date Modified</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var i = 1;
                                        }
                                        @foreach (var diseases in Model.disease)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@diseases.diseaseName</td>
                                                <td>@diseases.notes</td>
                                                <td>@diseases.dateAdded</td>
                                                <td>@diseases.dateModified</td>
                                                <td>
                                                    <input type="hidden" name="id" id="id" value="@diseases.diseaseID" />
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>



                <h1 style="font-size: x-large;"><b>Institutions</b></h1>
                <div class="row">
                    <!-- End single blog -->
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="single-blog">
                            <div class="blog-text">
                                <form method="post">
                                    @if (Model.institutions.Count() > 0)
                                    {
                                        <table class="table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        No.
                                                    </th>
                                                    <th>
                                                        Type
                                                    </th>
                                                    <th>
                                                        Name
                                                    </th>
                                                    <th>
                                                        Notes
                                                    </th>
                                                </tr>
                                            </thead>
                                                @{
                                                    var ib = 1;
                                                }
                                                @foreach (var institution in Model.institutions)
                                                {
                                                    <tr>
                                                        <td>
                                                            @ib
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(m => institution.institutionType.institutionType)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(m => institution.institutionName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(m => institution.notes)
                                                        </td>

                                                    </tr>
                                                    ib++;
                                                }
                                        </table>
                                    }
                                    else
                                    {
                                        <p>No institutions yet</p>
                                    }
                                </form>
                            </div>

                        </div>
                    </div>
                </div>



                <h1 style="font-size: x-large;"><b>Vaccines</b></h1>
                <div class="row">
                    <!-- End single blog -->
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="single-blog">
                            <div class="blog-text">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Disease</th>
                                            <th>Vaccine</th>
                                            <th>Notes</th>
                                            <th>Date Added</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var ia = 1;
                                        }
                                        @foreach (var vaccine in Model.vaccines)
                                        {
                                            <tr>
                                                <td>@ia</td>
                                                <td>@vaccine.disease.diseaseName</td>
                                                <td>@vaccine.vaccineName</td>
                                                <td>@vaccine.notes</td>
                                                <td>@vaccine.dateAdded</td>
                                                <td>

                                                    <input type="hidden" name="id" id="id" value="@vaccine.vaccineID" />
                                                </td>
                                            </tr>
                                            ia++;
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



    <!-- dashboard modals -->

    <div class="modal fade" id="newsSources">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">News Sources</h4>
                </div>
                <div class="modal-body">

                    <p>https://www.fda.gov.ph/advisories/</p>
                    <p>https://doh.gov.ph/press-releases</p>
                    <p>https://www.who.int/news-room/headlines</p>
                    <p>https://manila.gov.ph/news-and-events/</p>
                    <p>https://quezoncity.gov.ph/news-and-media/</p>
                    <p>https://www.makati.gov.ph/content/news</p>
                    <p>https://www.pasigcity.gov.ph/news-events</p>
                    <br>
                    <input type="button" class="btn btn-secondary" id="hideSources" value="Hide" />
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="institutions">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Institutions in database</h4>
                </div>
                <div class="modal-body">
                    <p>Adela Serra Ty Memorial Medical Center</p>
                    <p>Adventist Hospital-Cebu, Inc.</p>
                    <p>Adventist Hospital-Davao, Inc.</p>
                    <p>Adventist Hospital-Palawan, Inc.</p>
                    <p>Adventist Hospital-Santiago City, Inc.</p>
                    <p>Adventist Medical Center Manila</p>
                    <p>Adventist Medical Center-Bacolod, Inc.</p>
                    <p>Adventist Medical Center-Iligan City, Inc.</p>
                    <p>Adventist Medical Center-Valencia City, Inc.</p>
                    <p>Ago General Hospital</p>
                    <p>Air Force General Hospital</p>
                    <p>Alabang Medical Center</p>
                    <p>Albay Doctors Hospital</p>
                    <p>Allah Valley Medical Specialists Center, Inc.</p>
                    <p>Allied Care Experts (ACE) Medical Center - Baypointe, Inc.</p>
                    <p>Allied Care Experts (ACE) Medical Center - Pateros, Inc.</p>
                    <br>
                    <input type="button" class="btn btn-secondary" id="hideInstitutions" value="Hide" />
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="vaccines">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Vaccines in database</h4>
                </div>
                <div class="modal-body">

                    <p>Covaxin</p>
                    <p>Moderna</p>
                    <p>Janssen</p>
                    <p>Oxford-AstraZeneca</p>
                    <p>Pfizer-BioNTech</p>
                    <p>Sinovac</p>
                    <p>Sinopharm</p>
                    <p>Sputnik V</p>
                    <br>
                    <input type="button" class="btn btn-secondary" id="hideVaccines" value="Hide" />
                </div>
            </div>
        </div>
    </div>
}
else
{
    @if (User.Identity.IsAuthenticated && User.IsInRole("Patient"))
    {

        Response.Redirect("/patientLanding");
    }
    else if (User.Identity.IsAuthenticated && User.IsInRole("Advertiser"))
    {

        Response.Redirect("/advertiserLanding");
    }
    else
    {
        Response.Redirect("/Index");
    }

}