@page
@model VINES.Pages.Ads.AddUserModel
@{
    ViewData["Title"] = "Registration";
    Layout = null;
}

<!-- Registration -->
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,400i,600,700|Raleway:300,400,400i,500,500i,700,800,900" rel="stylesheet">
    
    <link rel="stylesheet" href="~/loginAssets/fonts/icomoon/style.css">
    

    <link rel="stylesheet" href="~/loginAssets/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/loginAssets/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="~/loginAssets/css/style.css">

    <title>VINES - Create New Advertiser</title>
  </head>
  <body>
  

  
  <div class="content">
    <div class="container">
      <div class="row justify-content-center">
        <!-- <div class="col-md-6 order-md-2">
          <img src="images/undraw_file_sync_ot38.svg" alt="Image" class="img-fluid">
        </div> -->
        <div class="col-md-6 contents">
          <div class="row justify-content-center">
            <div class="col-md-12">
              <div class="form-block">
                  <div class="mb-4">
                  <h3><strong>Create Advertiser Account</strong></h3>
                  <p class="mb-4" style="color:black">Enter Details</p>
                </div>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @Html.ValidationMessage("Error", new { @style = "color:red" })
                    @Html.ValidationMessage("Success", new { @style = "color:green" })
                    <div class="form-group last mb-4">
                    <label asp-for="Input.institution" style="color:black">Institution</label>
                    <br />
                    <br />
                    <select asp-for="Input.institution">
                        @foreach (var inst in Model.institutions)
                                            {
                                                <option value="@inst.institutionID">@inst.institutionName</option>
                                            }

                    </select>
               
                  </div>
                  <div class="form-group last mb-4">
                    <label asp-for="Input.firstName" style="color:black">First Name</label>
                    <br />
                    <br />
                    <input type="text" class="form-control" asp-for="Input.firstName">
                    <span asp-validation-for="Input.firstName" class="text-danger"></span>
               
                  </div>

                  <div class="form-group last mb-4">
                    <label asp-for="Input.middleName" style="color:black">Middle Name</label>
                    <br />
                    <br />
                    <input type="text" class="form-control" asp-for="Input.middleName">
               
                  </div>

                  <div class="form-group last mb-4">
                    <label asp-for="Input.lastName" style="color:black">Last Name</label>
                    <br />
                    <br />
                    <input type="text" class="form-control" asp-for="Input.lastName">
               
                  </div>

                  <div class="form-group last mb-4">
                    <label asp-for="Input.contactNumber" style="color:black">Contact Number</label>
                    <br />
                    <br />
                    <input type="tel" class="form-control" asp-for="Input.contactNumber">
               
                  </div>
                  

                  <!--  ===== ADD Gender Drop down ==== -->
                  <div class="form-group last mb-4">
                    <label asp-for="Input.gender" style="color:black">Gender</label>
                    <br />
                    <br />
                    
                    <select asp-for="Input.gender">
                        @foreach (var genders in Model.genders)
                                            {
                                                <option value="@genders.genderID">@genders.gender</option>
                                            }

                    </select>
               
                  </div>
                  <!-- ======= HELP FIX DOB ====== -->
                  <div class="form-group last mb-4">
                    <label asp-for="Input.dateOfBirth" style="color:black">Date of Birth</label>
                    <br />
                    <br />
                    
                    <input type="date" class="form-control" asp-for="Input.dateOfBirth">
               
                  </div>
                  <div class="form-group first">
                    <label asp-for="Input.email" style="color:black">Email</label>
                    <br />
                    <br />
                    <input type="text" class="form-control" asp-for="Input.email">
                    <span asp-validation-for="Input.email" class="text-danger"></span>

                  </div>
                  <div class="form-group last mb-4">
                    <label asp-for="Input.password" style="color:black">Password</label>
                    <input type="password" class="form-control" asp-for="Input.password">
                    <span asp-validation-for="Input.password" class="text-danger"></span>
               
                  </div>
                  <div class="form-group last mb-4">
                      <label asp-for="Input.confirmPassword" style="color:black">Confirm Password</label>
                      <input type="password" class="form-control" asp-for="Input.confirmPassword" />
                      <span asp-validation-for="Input.confirmPassword" class="text-danger"></span>
                  </div>

                  <input type="submit" value="Create New Account" class="btn btn-pill text-white btn-block btn-primary">
                  <br />
                 
                    
                  <a href="/adminLanding" value="Back to Admin Landing">Back to Admin Landing</a>

                </form>
              </div>
            </div>
          </div>
          
        </div>
        
      </div>
    </div>
  </div>
  
    <script src="~/loginAssets/js/jquery-3.3.1.min.js"></script>
    <script src="~/loginAssets/js/popper.min.js"></script>
    <script src="~/loginAssets/js/bootstrap.min.js"></script>
    <script src="~/loginAssets/js/main.js"></script>
  </body>
</html> <!-- end of login template -->

@section Scripts {
    <partial name ="_ValidationScriptsPartial" />
}

