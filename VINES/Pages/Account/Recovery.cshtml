
@page
@model VINES.Pages.Account.RecoveryModel
@{
}
<head>
    <title>VINES - Account Recovery</title>
  </head>
  <body>
  

  
  <div class="content">
    <div class="container">
      <div class="row justify-content-center">
        <!-- <div class="col-md-6 order-md-2">
          <img src="images/undraw_file_sync_ot38.svg" alt="Image" class="img-fluid">
        </div> -->
        @if(Model.G){
        
        <div class="col-md-6 contents">
          <div class="row justify-content-center">
            <div class="col-md-12">
              <div class="form-block">
                  <div class="mb-4">
                  <h3>Account <strong>RECOVERY</strong></h3>
                  <p class="mb-4" style="color:black">Please set your new password.</p>
                </div>
                
                <form id="account" method="post">
                  <div class="form-group first">
                    <label asp-for="input.email" style="color:black">Email</label>
                    <input type="text" asp-for="input.email" class="form-control" value="@Model.user.email" readonly>
                    <span asp-validation-for="input.email" class="text-danger"></span>

                  </div>
                  <div class="form-group last mb-4">
                    <label asp-for="input.password" style="color:black">Password</label>
                    <input type="password" asp-for="input.password" class="form-control" id="password">
                    <span asp-validation-for="input.password" class="text-danger"></span>
                  </div>
                  


                  <input type="submit" value="Confirm" class="btn btn-pill text-white btn-block btn-primary">


                  
                </form>
                
              </div>
            </div>
          </div>
          
        </div>
        }
        
      </div>
    </div>
  </div>
  
    <script src="~/loginAssets/js/jquery-3.3.1.min.js"></script>
    <script src="~/loginAssets/js/popper.min.js"></script>
    <script src="~/loginAssets/js/bootstrap.min.js"></script>
    <script src="~/loginAssets/js/main.js"></script>
  </body>
</html> 
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}