@page
@model VINES.Pages.Account.LoginAdvertModel
@{
    ViewData["Title"] = "Advertiser Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,400i,600,700|Raleway:300,400,400i,500,500i,700,800,900" rel="stylesheet">
    
    <link rel="stylesheet" href="~/loginAssets/fonts/icomoon/style.css">
    

    <link rel="stylesheet" href="~/loginAssets/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/loginAssets/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="~/loginAssets/css/style.css">

    <title>VINES - Login</title>
  </head>
  <body>
  
  <div class="content">
    <div class="container">
      <div class="row justify-content-center">
        <!-- <div class="col-md-6 order-md-2">
          <img src="images/undraw_file_sync_ot38.svg" alt="Image" class="img-fluid">
        </div> -->
        <div class="col-md-6 contents">
          <div class="row justify-content-center">
            <div class="col-md-12">
              <div class="form-block">
                  <div class="mb-4">
                  <h3>Sign In to <strong>VINES</strong></h3>
                  <p class="mb-4" style="color:black">Please Use Your Advertiser Account</p>
                </div>
                <form id="admin" method="post">
                    @Html.ValidationMessage("Error", new { @style="color:red" })
                  <div class="form-group first">
                    <label asp-for="Input.email" style="color:black">Email</label>
                    <input type="text" asp-for="Input.email" class="form-control">
                    <span asp-validation-for="Input.email" class="text-danger"></span>

                  </div>
                  <div class="form-group last mb-4">
                    <label asp-for="Input.password" style="color:black">Password</label>
                    <input type="password" asp-for="Input.password" class="form-control" id="password">
                    <span asp-validation-for="Input.password" class="text-danger"></span>
                  </div>
                  
                  <div class="d-flex mb-5 align-items-center">
                    <label class="control control--checkbox mb-0"><span style="color:black" class="caption">Remember me</span>
                      <input type="checkbox" checked="checked"/>
                      <div class="control__indicator"></div>
                    </label>
                      <span class="ml-auto"><a class="" asp-page="/Account/ForgotPassword" style="color:black">Forgot Password</a></span> 
                  </div>

                  <input type="submit" value="Log In" class="btn btn-pill text-white btn-block btn-primary">
                </form>
                <a href="/Index" style="color:black">Return to home</a>
              </div>
            </div>
          </div>
          
        </div>
        
      </div>
    </div>
  </div>
  
    <script src="~/loginAssets/js/jquery-3.3.1.min.js"></script>
    <script src="~/loginAssets/js/popper.min.js"></script>
    <script src="~/loginAssets/js/bootstrap.min.js"></script>
    <script src="~/loginAssets/js/main.js"></script>
  </body>
</html> 
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
